<%= form_with(model: event, local: true) do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, id: :event_title %>
  </div>

  <div class="field">
    <%= f.label :start %>
    <%= f.datetime_select :start, id: :event_start %>
  </div>

  <div class="field">
    <%= f.label :end %>
    <%= f.datetime_select :end, id: :event_end %>
  </div>

  <div class="field">
    <%= f.label :location %>
    <%= f.text_field :location, id: :event_location %>
  </div>

  <div class="field">
    <%= f.label :ispublic %>
    <%= f.check_box :ispublic, id: :event_ispublic %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
